/* components/flow_list/flow_list.wxss */
.v-flow_list {
  display: flex;
  flex-direction: row;
  padding: 0 8px;
  margin: 24rpx 0;
}

.v-list {
  flex: 1;
  margin: 0 8px;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.v-item {
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  /* margin-bottom: 24rpx; */
}

.v-item-img {
  width: 324rpx;
  height: 380rpx;
  border-radius: 12rpx;
  background-color: #f3f3f3;
}
.v-item-title {
  color: #232323;
  font-size: 30rpx;
  font-weight: 500;
  font-family: PingFangSC-bold;
  line-height: 36rpx;
  max-height: 72rpx;
  margin-top: 24rpx;
  margin-bottom: 8rpx;
  overflow: hidden;

  word-wrap: normal;
}
.v-item-botm {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 48rpx;

  font-size: 24rpx;
  color: #f12602;
}
.v-item-price {
  width: 180rpx;
  font-size: 36rpx;
  font-weight: 500;
  font-family: PingFangSC-bold;
}
.v-item-sales {
  flex: 1;
  color: #323232;
  text-align: end;
}
