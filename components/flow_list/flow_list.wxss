/* components/flow_list/flow_list.wxss */
.v-flow_list {
    display: flex;
    flex-direction: row;
    padding: 0 8px;
    margin: 24rpx 0;
}

.v-list {
    flex: 1;
    margin: 0 8px;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.v-item {
    display: flex;
    flex-direction: column;
}

.v-item2 {
    display: flex;
    flex-direction: column;
}
.v-item-img {
    width: 324rpx;
    height: 420rpx;
    border-radius: 12rpx;
    /* background-color: #ff0099; */
}
.v-item-img2 {
    width: 324rpx;
    height: 324rpx;
    border-radius: 12rpx;
    /* background-color: aqua; */
}
.v-item-title {
    color: #232323;
    font-size: 30rpx;
    font-weight: 500;
    font-family: PingFangSC-bold;
    line-height: 36rpx;
    max-height: 72rpx;
    margin-top: 24rpx;
    margin-bottom: 8rpx;
    overflow: hidden;

    word-wrap: normal;

}
.v-item-botm {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 56rpx;
}
.v-item-user {
    color: #999999;
    font-size: 28rpx;
}
.v-img-down {
    width: 24rpx;
    height: 24rpx;
}
.v-img-down-count {
    color: #676767;
    font-size: 28rpx;
}